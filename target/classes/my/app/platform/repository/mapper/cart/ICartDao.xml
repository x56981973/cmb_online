<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="my.app.platform.repository.mapper.cart.ICartDao">
    <select id="queryCart" resultType="my.app.platform.domain.view.CartDetail">
        SELECT * FROM cart_detail
        WHERE c_id = #{c_id}
    </select>

    <insert id="insertCart">
        INSERT INTO
        cart(c_id)
        VALUES (#{0})
    </insert>

    <delete id="deleteCart" parameterType="String">
        DELETE FROM cart
        WHERE c_id = #{c_id}
    </delete>

    <update id="updateCart" parameterType="String">
        UPDATE cart
        SET
        price = #{1}
        WHERE c_id = #{0}
    </update>

    <insert id="insertCartItem">
        INSERT INTO
        cart_item(c_id, i_id, num)
        VALUES (#{0}, #{1}, #{2})
    </insert>

    <delete id="deleteCartItem">
        DELETE FROM cart_item
        WHERE c_id = #{0} AND i_id = #{1}
    </delete>

    <update id="updateCartItem">
        UPDATE cart_item
        SET
        num = #{2}
        WHERE i_id = #{1} AND c_id = #{0}
    </update>
</mapper>